Процедура ИзменитьПароль(Команда)
	ПараметрыЗакрытия = Новый Структура;
	ПараметрыЗакрытия.Вставить("ИмяПользователя", Пользователь);
	ПараметрыЗакрытия.Вставить("ПарольСтарый", СтарыйПароль);
	ПараметрыЗакрытия.Вставить("ПарольНовый", НовыйПароль);
	
	Закрыть(ПараметрыЗакрытия);
